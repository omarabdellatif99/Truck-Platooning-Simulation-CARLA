<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>// Place global declarations here.
chan Request;
chan couple;
chan abort;
chan slowdown;
chan safeDistance;</declaration>
	<template>
		<name x="5" y="5">RequestingTruck</name>
		<declaration>// Place local declarations here.
clock cool_down;</declaration>
		<location id="id0" x="-654" y="-382">
			<name x="-680" y="-425">Couple</name>
		</location>
		<location id="id1" x="-467" y="-263">
			<name x="-484" y="-246">Abort</name>
		</location>
		<location id="id2" x="-654" y="-263">
		</location>
		<location id="id3" x="-858" y="-263">
		</location>
		<init ref="id3"/>
		<transition id="id4">
			<source ref="id2"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="-637" y="-340">couple?</label>
		</transition>
		<transition id="id5">
			<source ref="id2"/>
			<target ref="id1"/>
			<label kind="synchronisation" x="-595" y="-289">abort?</label>
		</transition>
		<transition id="id6">
			<source ref="id3"/>
			<target ref="id2"/>
			<label kind="guard" x="-807" y="-255">cool_down &gt; 5</label>
			<label kind="synchronisation" x="-782" y="-289">Request!</label>
		</transition>
	</template>
	<template>
		<name>FollowingTrucks</name>
		<declaration>int distance = 10;</declaration>
		<location id="id7" x="-93" y="-212">
			<name x="-103" y="-246">DistanceConfirm</name>
		</location>
		<location id="id8" x="-246" y="-110">
		</location>
		<location id="id9" x="-459" y="-110">
		</location>
		<init ref="id9"/>
		<transition id="id10">
			<source ref="id8"/>
			<target ref="id7"/>
			<label kind="guard" x="-272" y="-204">distance&gt;50</label>
			<label kind="synchronisation" x="-178" y="-144">safeDistance!</label>
		</transition>
		<transition id="id11">
			<source ref="id9"/>
			<target ref="id8"/>
			<label kind="synchronisation" x="-399" y="-136">slowdown?</label>
		</transition>
	</template>
	<template>
		<name>Leader</name>
		<declaration>int Distance_ahead;</declaration>
		<location id="id12" x="204" y="-272">
		</location>
		<location id="id13" x="-76" y="-68">
			<name x="-86" y="-102">Abort</name>
		</location>
		<location id="id14" x="-221" y="-221">
			<name x="-255" y="-255">SlowDown</name>
		</location>
		<location id="id15" x="-314" y="-68">
		</location>
		<location id="id16" x="-501" y="-68">
		</location>
		<location id="id17" x="8" y="-272">
		</location>
		<init ref="id16"/>
		<transition id="id18">
			<source ref="id17"/>
			<target ref="id12"/>
			<label kind="synchronisation" x="68" y="-297">couple!</label>
		</transition>
		<transition id="id19">
			<source ref="id14"/>
			<target ref="id17"/>
			<label kind="synchronisation" x="-161" y="-289">safeDistance?</label>
		</transition>
		<transition id="id20">
			<source ref="id15"/>
			<target ref="id13"/>
			<label kind="guard" x="-263" y="-119">Distance_ahead&lt;50</label>
			<label kind="synchronisation" x="-221" y="-93">abort!</label>
		</transition>
		<transition id="id21">
			<source ref="id15"/>
			<target ref="id14"/>
			<label kind="guard" x="-399" y="-187">Distance_ahead&gt;50</label>
			<label kind="synchronisation" x="-246" y="-161">couple!</label>
		</transition>
		<transition id="id22">
			<source ref="id16"/>
			<target ref="id15"/>
			<label kind="synchronisation" x="-442" y="-93">Request?</label>
		</transition>
	</template>
	<system>// Place template instantiations here.
Process = Leader();
// List one or more processes to be composed into a system.
system Process,RequestingTruck,FollowingTrucks;
</system>
	<queries>
		<query>
			<formula/>
			<comment/>
		</query>
	</queries>
</nta>
